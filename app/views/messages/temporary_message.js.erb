
$("#reply-form-<%= @id %>").remove();
$("#form-wrapper-<%= @id %> .fake-textarea-div").hide();
$("#form-wrapper-<%= @id %>").append( "<%= escape_javascript render(:partial => 'messages/reply_form', :locals => { :message => @message, :id => @id }) %>" );

if ( $("#message-menu-<%= @id %>").attr('aria-expanded') == "true" ) {
  $("#message-menu-<%= @id %>").dropdown('toggle');
  console.log("aria-expanded is true");
} else {
  console.log("aria-expanded is false");
}

var toEmail = $("#details-menu-<%= @id %> .from-email").text();
$("#reply-form-<%= @id %> .to-input").attr('placeholder', toEmail);

