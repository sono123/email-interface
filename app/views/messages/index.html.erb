      <div class="col-sm-12" style="display:none;">
        <div class="container">
          <div class="col-sm-12">
            <%= form_with(model: @message, local: true) do |form| %>
              <% if @message.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

                  <ul>
                  <% @message.errors.full_messages.each do |message| %>
                    <li><%= @message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= form.text_field :receiver, id: :message_receiver, class: "receiver-input" %>
                <%= form.trix_editor :body, id: :message_body %>
              </div>

              <div class="actions message-btns-wrapper">
                <%= form.submit "Send", class: "btn submit-message-btn" %>
                <a class="btn delete-message-btn" href="#">Trash</a>
              </div>
            <% end %>
          </div>
        </div>
